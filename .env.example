# SZAS Docker Configuration
# Copy this file to .env and customize as needed

# Obscure ports for security (use non-standard ports above 10000)
WEB_PORT=15847
API_PORT=16392

# Flask configuration
FLASK_DEBUG=false

# Statcast Data Configuration
# Pre-download data on container startup (set to false to skip)
PRELOAD_DATA=true
# Default year for Statcast data (2015-2024 available)
DEFAULT_YEAR=2024

# Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120
